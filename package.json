{
  "name": "ts-aio",
  "version": "0.0.1",
  "description": "ts test & build & dev all in one package",
  "main": "dist/index.js",
  "repository": "https://github.com/bichikim/ts-allinone.git",
  "author": "BichiKim <bichi@live.co.kr>",
  "bin": {
    "ts-aio": "dist/index.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "cross-env __INNER=true ts-node src",
    "coverage": "nyc mocha",
    "dev": "ts-node-dev --respawn --transpileOnly --project tsconfig.dev.json build/dev.ts",
    "lint": "concurrently \"npm:lint-eslint\" \"npm:lint-tslint\"",
    "lint-eslint": "eslint --ext .js --ext .ts src",
    "lint-tslint": "tslint src/**/*.ts",
    "reformat": "prettier-eslint --write \"src/**/*.ts\"",
    "test": "cross-env __INNER=true ts-node src --task test",
    "test-watch": "mocha --watch-extensions ts --watch"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "commander": "^2.19.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "eslint": "^5.9.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-vue": "^5.0.0-beta.5",
    "gulp": "^4.0.0",
    "gulp-mocha": "^6.0.0",
    "gulp-typescript": "^5.0.0-alpha.3",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "module-alias": "^2.1.0",
    "nyc": "^13.1.0",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "reflect-metadata": "^0.1.12",
    "through2": "^3.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^21.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/graphql": "^14.0.3",
    "@types/gulp": "^4.0.5",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.3.1",
    "@types/node": "^10.12.8",
    "@types/sinon": "^5.0.5"
  }
}
